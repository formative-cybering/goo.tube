{
  "languages": {
    "TypeScript": {
      "language_servers": [
        "deno",
        "!typescript-language-server"
      ],
      "formatter": "language_server"
    },
    "JavaScript": {
      "language_servers": [
        "deno",
        "!typescript-language-server"
      ],
      "formatter": "language_server"
    },
    "TSX": {
      "language_servers": [
        "deno",
        "!typescript-language-server"
      ],
      "formatter": "language_server"
    }
  },
  "lsp": {
    "deno": {
      "initialization_options": {
        "enable": true,
        "lint": true,
        "unstable": true,
        "config": "./deno.json",
        "importMap": "./importMap.json",
        "codeLens": {
          "implementations": true,
          "references": true,
          "referencesAllFunctions": true
        },
        "suggest": {
          "imports": {
            "hosts": {
              "https://esm.sh": true
            }
          }
        }
      }
    }
  },
  "formatter": "language_server",
  "format_on_save": "on",
  "code_actions_on_format": {
    "source.organizeImports": true
  }
}
